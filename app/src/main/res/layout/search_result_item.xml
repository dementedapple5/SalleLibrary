<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/search_book_width"
    android:layout_height="@dimen/search_book_height">

    <ImageView
        android:id="@+id/mFrontPageIv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/margin_eight"
        android:layout_marginEnd="@dimen/margin_eight"
        android:layout_marginStart="@dimen/margin_eight"
        android:layout_marginTop="@dimen/margin_eight"
        app:layout_constraintBottom_toTopOf="@+id/mTitleTv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@color/cardview_light_background" />

    <TextView
        android:id="@+id/mTitleTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_twelve"
        android:layout_marginEnd="@dimen/margin_eight"
        android:layout_marginStart="@dimen/margin_eight"
        android:text="@string/default_shelf_title"
        android:textAlignment="textStart"
        android:textSize="@dimen/small_text_size"
        app:layout_constraintBottom_toTopOf="@+id/mAuthorTv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/mAuthorTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_sixteen"
        android:layout_marginEnd="@dimen/margin_eight"
        android:layout_marginStart="@dimen/margin_eight"
        android:text="@string/default_shelf_title"
        android:textAlignment="textEnd"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/small_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />
</android.support.constraint.ConstraintLayout>